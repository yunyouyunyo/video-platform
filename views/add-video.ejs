<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
  crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
  crossorigin="anonymous"></script>

<body class="bg-dark text-light d-block align-items-center justify-content-between">

  <h2 class="text-center my-4">新增影片</h2>

  <form action="/home/add-video" method="POST" class="container" style="max-width: 600px;">
    <div class="mb-3">
      <label for="title" class="form-label">影片標題：</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="輸入影片標題" required />
    </div>

    <div class="mb-3">
      <label for="url" class="form-label">影片連結：</label>
      <input type="url" class="form-control" id="url" name="url" placeholder="輸入影片連結" required />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">影片描述：</label>
      <input type="text" class="form-control" id="description" name="description" placeholder="輸入影片描述" required />
    </div>

    <div class="mb-3">
      <label for="category" class="form-label">影片類別：</label>
      <input type="text" class="form-control" id="category" name="category" placeholder="輸入影片類別" required />
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <button type="submit" class="btn btn-outline-light">送出新增</button>
      <a href="/home" class="btn btn-secondary">« 回列表</a>
    </div>
  </form>
</body>